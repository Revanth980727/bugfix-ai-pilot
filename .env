
# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=your_github_username_or_org
GITHUB_REPO_NAME=your_repository_name
GITHUB_DEFAULT_BRANCH=main
GITHUB_USE_DEFAULT_BRANCH_ONLY=True  # Ensures we only use the default branch

# JIRA Configuration
JIRA_API_TOKEN=your_jira_token_here
JIRA_USERNAME=your_jira_email_here
JIRA_URL=your_jira_url_here
JIRA_PROJECT_KEY=your_project_key_here
JIRA_POLL_INTERVAL=30

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Application Configuration
MAX_RETRIES=4
PROJECT_TEST_COMMAND=npm test
LOG_RETENTION_DAYS=30
RETRY_DELAY_SECONDS=5
REPO_PATH=/app/code_repo   # Explicitly specify the repo path for the agent to use

# Email Notification Configuration (Optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_smtp_password
NOTIFICATION_EMAIL=team@example.com

# Slack Notification Configuration (Optional)
SLACK_TOKEN=your_slack_token_here
SLACK_CHANNEL=bugfix-notifications

# Logging Configuration
LOG_LEVEL=INFO

# Debug mode (set to True for additional logging)
DEBUG_MODE=True

# Test mode (set to False to use real GitHub interactions)
TEST_MODE=False  # This setting controls whether to use real GitHub interactions

# Advanced patch handling
PATCH_MODE=line-by-line  # Options: line-by-line, intelligent, direct
